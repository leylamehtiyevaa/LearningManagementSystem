@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="col-6 col-lg-3 text-right">
@if (SignInManager.IsSignedIn(User))
{

        <a id="manage" class="small mr-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>


        <form id="logoutForm" class="small" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-link text-light border-0">Logout</button>
        </form>
   
}
else
{


        <a class="small mr-3" id="login" asp-area="Identity" asp-page="/Account/Login">
                <span class="icon-lock"></span>
                Login
            </a>


        <a class ="small" id="register" asp-area="Identity" asp-page="/Account/Register">
            <span class="icon-person"></span>
            Register
        </a>


}
</div>
