@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="untree_co-hero inner-page overlay" style="z-index:0;background-image: url('/images/img-school-5-min.jpg');">
    <div class="container" >
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Login</h1>

                    </div>
                </div>
            </div>
        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div>



<div class="untree_co-section">
    <div class="container">

        <div class="row mb-5 justify-content-center">
            <section class="col-lg-5 mx-auto order-1" data-aos="fade-up" data-aos-delay="200">
                <form id="account" class="form-box" method="post">
                    <div class="row">
                        <div class="col-12 mb-3" asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="col-12 mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="col-12 mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="col-12 mb-3">
                            <label class="control control--checkbox">
                                <span class="caption">Remember me</span>
                                <input type="checkbox" checked="checked" class="form-check-input" asp-for="Input.RememberMe" />
                                <div class="control__indicator"></div>
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                        <div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </div>
                </form>
            </section>
        </div>


    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
